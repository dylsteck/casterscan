{
  "name": "casterscan",
  "version": "0.1.0",
  "description": "A block explorer for Farcaster",
  "author": "@dylsteck",
  "license": "MIT",
  "homepage": "https://github.com/dylsteck/casterscan",
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "dev:server:direct": "cd server && bun --watch src/index.ts",
    "dev:server:hot": "cd server && bun --hot src/index.ts",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=server",
    "build:single": "turbo build && bun run copy:static",
    "copy:static": "rm -rf server/static && cp -r client/dist server/static",
    "start": "cd server && bun run dist/index.js",
    "start:single": "cd server && bun run dist/index.js",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "postinstall": "turbo build --filter=shared --filter=server"
  },
  "keywords": [
    "casterscan",
    "block explorer",
    "farcaster",
    "snapchain"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "turbo": "^2.5.5"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  }
}
